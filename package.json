{
    "name": "profile",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint src --ext .js,jsx,.ts,.tsx --fix",
        "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css}'",
        "prepare": "husky install"
    },
    "lint-staged": {
        "./**/*.{js,jsx,ts,tsx}": [
            "npm run lint",
            "npm run format"
        ]
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "printWidth": 100
    },
    "dependencies": {
        "@chakra-ui/next-js": "^2.1.4",
        "@chakra-ui/react": "^2.7.0",
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "framer-motion": "^10.12.16",
        "next": "^13.4.7",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.9.0"
    },
    "devDependencies": {
        "@types/node": "^20.3.3",
        "@types/react": "^18.2.14",
        "@types/react-dom": "^18.2.6",
        "@types/react-icons": "^3.0.0",
        "eslint": "8.42.0",
        "eslint-config-next": "13.4.4",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "typescript": "^5.1.6"
    }
}
